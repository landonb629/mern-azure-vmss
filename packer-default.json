{ 
    "variables": {
        "sha": "{{env `GITHUB_SHA`}}",
        "client_id": "{{env `AZURE_CLIENT_ID`}}",
        "client_secret": "{{env `AZURE_CLIENT_SECRET`}}",
        "tenant_id": "{{env `AZURE_TENANT_ID`}}",
        "sub_id": "{{env `AZURE_SUB_ID`}}",
        "mongo_uri": "{{env `MONGO_URI`}}",
        "jwt_secret": "{{env `JWT_SECRET`}}",
        "username": "{{env `MONGO_USERNAME`}}",
        "password": "{{env `MONGO_PASSWORD`}}"
    },
    "builders": [{
        "type": "azure-arm",
        "client_id": "{{user `client_id`}}",
        "client_secret": "{{user `client_secret`}}",
        "tenant_id": "{{user `tenant_id`}}",
        "subscription_id": "{{user `sub_id`}}",
        "managed_image_resource_group_name": "express-js-vmss",
        "managed_image_name": "prod-api-{{user `sha`}}",
        "os_type": "Linux",
        "image_publisher": "Canonical",
        "image_offer": "UbuntuServer",
        "image_sku": "18.04-LTS",
        "azure_tags": { 
            "env": "dev",
            "app": "express"
        },
        "location": "East US",
        "vm_size": "Standard_B1s"
        
    }],
    "provisioners": [
        {
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }}",
        "inline": [ 
            "touch test.txt"
        ],
        "inline_shebang": "/bin/sh -x",
        "type": "shell",
        "environment_vars": [
            "MONGO_URI={{user `mongo_uri`}}",
            "JWT_SECRET={{user `jwt_secret`}}",
            "MONGO_USERNAME={{user `username`}}",
            "MONGO_PASSWORD={{user `password`}}"
        ]
    }
]
}

